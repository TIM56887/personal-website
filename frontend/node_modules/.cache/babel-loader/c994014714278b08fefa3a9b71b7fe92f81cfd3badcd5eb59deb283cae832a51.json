{"ast":null,"code":"export default {\n  name: 'SuggestTodoItem',\n  props: ['todo'],\n  data() {\n    return {\n      isEditing: false,\n      editingvalue: \"\"\n    };\n  },\n  methods: {\n    deletetodo(id) {\n      this.$store.dispatch('deletetodo', id);\n    },\n    edittodo(todo) {\n      this.isEditing = !this.isEditing;\n      this.editingvalue = todo.task;\n      this.$nextTick(() => {\n        this.$refs.editingInput.focus();\n      });\n    },\n    sendeditedtodo(e, todo) {\n      if (todo.task !== e.target.value) {\n        let content = e.target.value;\n        let id = todo.id;\n        this.isEditing = false;\n        this.$store.dispatch('edittodo', {\n          content,\n          id\n        });\n      }\n      this.isEditing = false;\n    }\n  }\n};","map":{"version":3,"names":["name","props","data","isEditing","editingvalue","methods","deletetodo","id","$store","dispatch","edittodo","todo","task","$nextTick","$refs","editingInput","focus","sendeditedtodo","e","target","value","content"],"sources":["src/components/SuggestTodoItem.vue"],"sourcesContent":["<template>\n    <li class=\"todoli d-flex flex-row justify-content-center\">\n        <div class=\"content shadow p-1 mb-3 bg-body-tertiary rounded\">\n            <div class=\"tododate\">{{ todo.date }}</div>\n            \n            <div v-show=\"!isEditing\" class=\"todocontent\">{{ todo.task }}</div>\n            <input ref=\"editingInput\" \n                    v-show=\"isEditing\" \n                    v-model=\"editingvalue\" \n                    @blur=\"sendeditedtodo($event,todo)\" \n                    class=\"todocontent\" >\n            <div v-if=\"$store.state.userstodo.includes(todo.id)\" class=\"editButton\" @click=\"edittodo(todo)\">\n\n                <i class=\"bi bi-pencil-square editicon\"></i>\n            </div>\n            <div v-if=\"$store.state.userstodo.includes(todo.id)\" class=\"deleteButton\" @click=\"deletetodo(todo.id)\">   \n                <i class=\"bi bi-trash3 deleteicon\"></i>\n            </div>\n            \n           \n        </div>\n    </li>\n</template>\n\n<script>\nexport default {\n    name:'SuggestTodoItem',\n    props:['todo'],\n    data(){\n        return{\n            isEditing:false,\n            editingvalue:\"\"\n        }\n    },\n    methods:{\n        deletetodo(id){\n            \n            this.$store.dispatch('deletetodo',id)\n        },\n        edittodo(todo){\n            this.isEditing = !this.isEditing\n            this.editingvalue = todo.task\n            this.$nextTick(() => {\n                this.$refs.editingInput.focus();\n            });\n        },\n        sendeditedtodo(e,todo){\n            if (todo.task !== e.target.value){\n                let content = e.target.value\n                let id = todo.id\n                this.isEditing=false\n                this.$store.dispatch('edittodo',{content,id})\n            }\n            this.isEditing=false\n        }\n    }\n\n}\n</script>\n\n<style scoped>\n    .deleteicon{\n        font-size: 1.5rem;\n        transition: all 0.1s;\n        \n    }\n    .deleteButton:hover .deleteicon{\n        color: rgb(192, 18, 18);\n        font-size: 1.8rem;\n    }\n    .editicon {\n        font-size: 1.5rem;\n        transition: all 0.1s;\n    }\n\n    .editButton:hover .editicon{\n        color: green;\n        font-size:1.8rem;\n    }\n    .editButton{\n        width:11%;\n        background: transparent;\n        display: flex;\n        justify-content: center;\n        align-items: center;\n        margin-right: 0;\n        height: 80%;\n    }\n\n    .editButton:hover{\n        background: rgba(0, 0, 0, 0.1);\n        border-radius: 0.9rem;\n    }\n\n    .content{\n        align-items: center;\n        display:flex;\n        width: 90%;\n        height: 60px;\n        background-color: #ebedf0;\n        border-radius: 1rem;\n    }\n\n    .tododate{\n        width:29%;\n        font-size: 1.5rem;\n        font-weight: 700;\n        text-align: center;\n    }\n    .todocontent{\n        width:50%;\n        overflow-x:auto;\n        \n    }\n    .deleteButton{\n        width:11%;\n        background: transparent;\n        display: flex;\n        justify-content: center;\n        align-items: center;\n        margin-right: 5px;\n        height: 80%;\n    }\n    .deleteButton:hover{\n        background: rgba(0, 0, 0, 0.1);\n        border-radius: 0.9rem;\n    }\n\n    .todoli{\n        list-style-type: none;\n        margin-bottom: 1rem;\n    }\n\n\n    \n</style>"],"mappings":"AAyBA;EACAA,IAAA;EACAC,KAAA;EACAC,KAAA;IACA;MACAC,SAAA;MACAC,YAAA;IACA;EACA;EACAC,OAAA;IACAC,WAAAC,EAAA;MAEA,KAAAC,MAAA,CAAAC,QAAA,eAAAF,EAAA;IACA;IACAG,SAAAC,IAAA;MACA,KAAAR,SAAA,SAAAA,SAAA;MACA,KAAAC,YAAA,GAAAO,IAAA,CAAAC,IAAA;MACA,KAAAC,SAAA;QACA,KAAAC,KAAA,CAAAC,YAAA,CAAAC,KAAA;MACA;IACA;IACAC,eAAAC,CAAA,EAAAP,IAAA;MACA,IAAAA,IAAA,CAAAC,IAAA,KAAAM,CAAA,CAAAC,MAAA,CAAAC,KAAA;QACA,IAAAC,OAAA,GAAAH,CAAA,CAAAC,MAAA,CAAAC,KAAA;QACA,IAAAb,EAAA,GAAAI,IAAA,CAAAJ,EAAA;QACA,KAAAJ,SAAA;QACA,KAAAK,MAAA,CAAAC,QAAA;UAAAY,OAAA;UAAAd;QAAA;MACA;MACA,KAAAJ,SAAA;IACA;EACA;AAEA"},"metadata":{},"sourceType":"module","externalDependencies":[]}